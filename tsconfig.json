{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["src/hooks/*"],
      "@actions/*": ["src/actions/*"],
      "@data/*": ["src/data/*"],
      "@domain/*": ["src/domain/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "babel.config.js",
    "metro.config.js"
  ]
}
